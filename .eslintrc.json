{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolver": {
      "node": {
        "paths": ["shared"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2],
    "no-tabs": 0,
    "react/prop-types": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0
  }
}
